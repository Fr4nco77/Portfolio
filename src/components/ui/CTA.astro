---
import { getTranslation, type Locale } from "@i18n/utils";
import ButtonRounded from "./ButtonRounded.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import Arrow from "@assets/icons/Arrow.astro";

interface Props {
  currentLang: Locale;
  styles?: string;
  transition?: boolean;
}

const { currentLang, styles, transition = true } = Astro.props;
const t = getTranslation(currentLang, "cta");
---

<section
  class:list={[
    "flex w-full flex-col items-center gap-9 px-4 md:gap-10 md:px-8 lg:gap-12",
    styles,
  ]}
  id="cta"
>
  <div
    class="flex flex-col items-center justify-center gap-2 md:gap-4 lg:gap-6"
  >
    <h2
      class:list={[
        "max-w-4xl text-center text-4xl/snug font-medium uppercase md:text-6xl/snug lg:text-7xl/snug",
        transition && "observe-enter opacity-0",
      ]}
    >
      {t.text1}
      <span class="text-neutral-400">{t.text2}</span>?
    </h2>
    <p
      class:list={[
        "max-w-2xl text-center text-sm/relaxed font-medium text-balance [animation-delay:150ms] md:text-base/relaxed lg:max-w-3xl lg:text-xl/relaxed",
        transition && "observe-enter opacity-0",
      ]}
    >
      {t.subtitle}
    </p>
  </div>
  <ButtonRounded
    to={getRelativeLocaleUrl(currentLang, "contact")}
    styles={`[animation-delay:300ms] h-12 lg:h-14 lg:px-9 lg:text-2xl px-8 font-medium uppercase ${transition && "observe-enter opacity-0"}`}
  >
    {t.button}
    <Arrow
      styles="size-7 lg:size-8 stroke-[1.5] group-hover:translate-x-2 duration-500 transition-tranform"
    />
  </ButtonRounded>
</section>
