---
interface Props {
  styles?: string;
  to: string;
}

const { styles, to } = Astro.props;
---

<a
  class:list={[
    "group flex items-center justify-center gap-2 rounded-full border border-neutral-800/80 bg-neutral-950 transition-colors duration-500 hover:bg-neutral-800 md:gap-2.5",
    styles,
  ]}
  href={to}
>
  <slot />
</a>
