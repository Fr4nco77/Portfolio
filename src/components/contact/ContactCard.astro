---
interface Props {
  icon: any;
}
const { icon: Icon } = Astro.props;
---

<div
  class="relative flex h-fit w-full flex-1 flex-col items-center justify-center gap-4 border border-neutral-800/80 bg-neutral-900/15 px-5 py-7 lg:w-80"
>
  <Icon
    styles="absolute top-3 left-3 size-[18px] stroke-neutral-400 stroke-[1.5]"
  />
  <slot />
</div>
