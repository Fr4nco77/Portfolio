---
import StickyTitle from "@components/ui/StickyTitle.astro";
import type es from "@i18n/ui/es";

interface Props {
  texts: typeof es.about.history;
}

const { texts: t } = Astro.props;
---

<section
  class="relative flex w-full flex-col items-center gap-20 md:gap-32 lg:gap-52"
>
  <StickyTitle title={t.title} simple button="" to="" />
  <div
    class="relative flex w-full flex-col items-center gap-20 px-4 md:gap-24 md:px-8 lg:gap-36"
  >
    <p
      class="observe-enter max-w-2xl text-center text-sm/relaxed font-medium text-balance opacity-0 md:text-base/relaxed lg:max-w-3xl lg:text-xl/relaxed"
    >
      {t.texts}
    </p>
    <div
      class="flex w-full max-w-6xl flex-wrap items-center justify-center gap-9"
    >
      {
        t.stats.map(({ data, label }, index) => (
          <div
            class="observe-enter relative flex h-44 w-80 flex-col items-center justify-center gap-2.5 rounded-sm border border-neutral-800/80 bg-neutral-950 p-4 font-medium uppercase opacity-0 max-md:w-full"
            style={`animation-delay: ${index * 150}ms`}
          >
            <h3 class="text-8xl">{data}</h3>
            <p class="text-lg/tight text-neutral-400">{label}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
