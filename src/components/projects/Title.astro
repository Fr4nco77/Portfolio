---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex w-full max-w-(--breakpoint-2xl) items-center justify-center md:justify-between"
>
  <h3
    class="text-2xl/tight font-medium uppercase md:text-3xl/tight lg:text-4xl/tight"
  >
    {title}
  </h3>
  <div class="flex items-center justify-center gap-8 max-md:hidden">
    <button id="toggleListCards" class="cursor-pointer">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="size-7 stroke-white stroke-[1.5] hover:stroke-neutral-400"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 5h18M3 12h18M3 19h18"></path>
      </svg>
    </button>
    <button
      id="toggleBigCards"
      class="pointer-events-none flex items-center justify-center rounded-full bg-white p-1.5"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="size-7 stroke-neutral-950 stroke-[1.5]"
        ><path stroke-linecap="round" stroke-linejoin="round" d="M5 7h1"
        ></path><path
          d="M2 17.714V6.286C2 5.023 2.995 4 4.222 4h15.556C21.005 4 22 5.023 22 6.286v11.428C22 18.977 21.005 20 19.778 20H4.222C2.995 20 2 18.977 2 17.714Z"
        ></path></svg
      ></button
    >
  </div>
</div>
